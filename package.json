    "bch",
    "bitcoin",
    "post",
    "office",
    "tokens"
  ],
  "author": "Andre Cabrera (andrecabrera@protonmail.ch)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slpland/simpleledger-post-office-server/issues"
  },
  "homepage": "https://github.com/slpland/simpleledger-post-office-server#readme",
  "dependencies": {
    "@chris.troutner/bch-js": "^3.3.5",
    "@types/express": "^4.17.2",
    "bignumber.js": "^9.0.0",
    "bitcoincashjs-lib": "Bitcoin-com/bitcoincashjs-lib#v4.0.1",
    "bitcore-payment-protocol": "^8.1.1",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "configstore": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "figlet": "^1.5.0",
    "inquirer": "^7.3.2",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "touch": "^3.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "@types/node": "^12.12.17",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
